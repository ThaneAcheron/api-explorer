// Place your settings in this file to overwrite the default settings
{
    "files.exclude": {
        "**/node_modules/": true,
        "**/dist": true,
        "**/es": true,
        "**/lib": true,
        "build": true,
        "packages/*/es": true,
        "packages/**/lib": true,
        "packages/**/umd": true,
        "_book": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/demo/dist/**": true,
        "**/build/**": true,
        "**/dist/**": true,
        "**/es/**": true,
        "**/lib/**": true,
        "**/umd/**": true,
        "_book/**": true,
        "packages-legacy/**": true
    },
    
    "editor.rulers": [ 120 ],
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "search.useIgnoreFiles": true,

    "explorer.openEditors.visible": 3,
    "explorer.openEditors.dynamicHeight": false,
    "standard.usePackageJson": true
}